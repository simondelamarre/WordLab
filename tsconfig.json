{
    "compilerOptions": {
        "target": "es5", // (5, 6) => es2020 // do not forget
        "module": "commonjs", // none, amd, commonjs,  es6 ?
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "allowJs": true,
        "removeComments": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "lib": [
        "es2020",
        "es7",
        "es6",
        "dom"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}